@model EmployeeInfoModel

<div class="container">

    <div id="result">
        <table class="table table-striped" style="width:100%" id="empTable">
            <thead class="thead-dark">
                <tr style="text-align:center;">

                    <th style='width:20%'><b>#</b></th>
                    <th style='width:40%'><b>Department</b></th>
                    <th style='width:40%'><b>Score</b></th>
                </tr>
            </thead>
            @{
                int index = 1;
            }
            <tbody style="text-align:center;">
                @foreach (var item in Model.sp_PerformanceReview)
                {



                    <tr>
                        <td>@index</td>
                        <td>@item.departmentName</td>
                        <td>@item?.score?.ToString("F2")</td>
                    </tr>
                    index++;


                }
            </tbody>
        </table>

    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#empTable').DataTable({
                paging: true,           
                searching: true,        
                ordering: true,         
                lengthMenu: [5, 10, 20],
                pageLength: 5           
            });
        });

    </script>
}